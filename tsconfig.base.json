{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@codeweavers/manufacturers-api": ["libs/manufacturers/api/src/index.ts"],
      "@codeweavers/manufacturers-ui": ["libs/manufacturers/ui/src/index.ts"],
      "@codeweavers/shared": ["libs/shared/src/index.ts"],
      "@codeweavers/showrooms-api": ["libs/showrooms/api/src/index.ts"],
      "@codeweavers/showrooms-ui": ["libs/showrooms/ui/src/index.ts"],
      "@codeweavers/vehicles-api": ["libs/vehicles/api/src/index.ts"],
      "@codeweavers/vehicles-ui": ["libs/vehicles/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
